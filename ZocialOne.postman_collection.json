{
  "info": {
    "name": "ZocialOne Backend API",
    "description": "Complete API collection for ZocialOne backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Amit Sharma\",\n  \"email\": \"amit@test.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"amit@test.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get User Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user/details",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "details"]
            }
          }
        }
      ]
    },
    {
      "name": "Complaints",
      "item": [
        {
          "name": "Create Live Demo Complaint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"complaint_type\": \"live_demo\",\n  \"preferred_date\": \"2026-02-10\",\n  \"preferred_time\": \"15:00\",\n  \"business_name\": \"ABC Fashion\",\n  \"contact_number\": \"+919876543210\",\n  \"demo_type\": \"online\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/complaints",
              "host": ["{{baseUrl}}"],
              "path": ["api", "complaints"]
            }
          }
        },
        {
          "name": "Create Technical Issue Complaint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"complaint_type\": \"technical_issue\",\n  \"module\": \"Content Generation\",\n  \"platform\": \"Instagram\",\n  \"error_code\": \"AI_503\",\n  \"issue_description\": \"AI caption generation failed multiple times\",\n  \"attachments\": [\"screenshot_1.png\", \"error_log.txt\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/complaints",
              "host": ["{{baseUrl}}"],
              "path": ["api", "complaints"]
            }
          }
        },
        {
          "name": "Create Billing Issue Complaint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"complaint_type\": \"billing_issue\",\n  \"invoice_id\": \"INV-2026-1021\",\n  \"transaction_id\": \"TXN_893423\",\n  \"amount\": 1499,\n  \"currency\": \"INR\",\n  \"issue_reason\": \"Charged twice\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/complaints",
              "host": ["{{baseUrl}}"],
              "path": ["api", "complaints"]
            }
          }
        },
        {
          "name": "Update Complaint Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"resolved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/complaints/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "complaints", "1", "status"]
            }
          }
        },
        {
          "name": "Get Complaint Metrics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/complaints/1/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "complaints", "1", "metrics"]
            }
          }
        }
      ]
    }
  ]
}